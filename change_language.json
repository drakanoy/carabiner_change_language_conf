{
  "title": "Language toggler",
  "rules": [
    {
      "description": "Toggle language with Left Command↔Shift or Right Command↔Shift (sequential press)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "ru"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "en"}]}],
          "to": [{"key_code": "left_shift","modifiers": ["left_command"]}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "en"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "ru"}]}],
          "to": [{"key_code": "left_shift", "modifiers": ["left_command"]}]
        },

        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "ru"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "en"}]}],
          "to": [{"key_code": "left_command", "modifiers": ["left_shift"]}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "en"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "ru"}]}],
          "to": [{"key_code": "left_command", "modifiers": ["left_shift"]}]
        },

        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": ["right_command"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "ru"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "en"}]}],
          "to": [{"key_code": "right_shift", "modifiers": ["right_command"]}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": ["right_command"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "en"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "ru"}]}],
          "to": [{"key_code": "right_shift", "modifiers": ["right_command"]}]
        },

        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "ru"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "en"}]}],
          "to": [{"key_code": "right_command", "modifiers": ["right_shift"]}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [{"select_input_source": {"language": "en"}}],
          "conditions": [{"type": "input_source_if","input_sources": [{"language": "ru"}]}],
          "to": [{"key_code": "right_command", "modifiers": ["right_shift"]}]
        }
      ]
    }
  ]
}
